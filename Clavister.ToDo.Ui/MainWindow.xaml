<Window x:Class="Clavister.ToDo.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clavister.ToDo.Ui"
        mc:Ignorable="d"
        Title="MainWindow" Height="324" Width="502">
    <Grid>
        <ListBox x:Name="TaskListBox" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="480"/>
        <TextBox x:Name="TaskTextBox" HorizontalAlignment="Left" Height="23" Margin="10,220,0,0" VerticalAlignment="Top" Width="400"/>
        <Button Content="Add Task" HorizontalAlignment="Left" Margin="420,220,0,0" VerticalAlignment="Top" Width="70" />
        <Button Content="Delete Task" HorizontalAlignment="Left" Margin="420,250,0,0" VerticalAlignment="Top" Width="70" />
        <Button Content="Mark Completed" HorizontalAlignment="Left" Margin="420,280,0,0" VerticalAlignment="Top" Width="70"/>
    </Grid>
</Window>
